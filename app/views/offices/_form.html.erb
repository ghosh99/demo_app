
    <%= form_for(@office) do |f| %>
      <% if @office.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@office.errors.count, "error") %> prohibited this listing from being saved:</h2>

          <ul>
          <% @office.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <div class="well panel-border">
      <div class="panel-header-gray">
        <h3> About your work space (Public) </h3>
        <p> Tell potential colleagues why they would want to work in your space.</p>
        <p>Highlight what makes it productive and convenient.</p>
      </div>
      <fieldset class="padtop">

          <div class="control-group">
            <label class="control-label">Title(Required) </label>
            <div class="controls"> <%= f.text_field :title %> </div>
          </div>

          <div class="control-group">
            <label class="control-label">Size </label>
            <div class="controls"> <%= f.text_field :size %> sq. ft. </div>
          </div>

          <div class="control-group">
            <label class="control-label">Zipcode</label>
            <div class="controls"> <%= f.text_field :loc_zip %> </div>
           </div>

          <div class="control-group">
            <label class="control-label">Accomodates</label>
            <div class="controls">  <%= f.number_field :accomodate %>  </div>
          </div>

          <div class="control-group">
            <label class="control-label">Description </label>
            <div class="controls"> <%= f.text_area :description %> </div>
          </div>


          <div class="control-group">
            <label class="control-label">Upload a Photo</label>
            <div class="controls"> <%= f.file_field :image1 %> </div>
          </div>


        <div class="control-group">
          <label class="control-label">Rent $</label>
          <div class="controls"> <%= f.text_field :rent %> </div>
          <label class="control-label">Swap places? </label>
          <div class="controls"> <%= f.check_box :swap %> </div>

        </div>

        <div class="control-group">
          <label class="control-label">Availability</label>
          <div class="controls"> <%= f.text_area :available %> </div>
        </div>

        <div class="control-group">
          <label class="control-label">Require Insurance?</label>
          <div class="controls"><%= f.check_box :insurance %> </div>
        </div>

        <div class="control-group">
          <label class="control-label">Someone on-site?</label>
          <div class="controls"><%= f.check_box :on_site %> </div>
        </div>

      </fieldset> 

      <div class="panel-header-gray">
        <h3> About You (Private) </h3>
        <p> Tradewinz creates trusted, reliable business connections.
          Help other people get to know you.
        </p>
      </div>
      
      <fieldset class="padtop">
        <div class="control-group">
          <label class="control-label">Company Name </label>
          <div class="controls"> <%= f.text_field :company_name %> </div>
        </div>

        <div class="control-group">
          <label class="control-label">Years in Business </label>
          <div class="controls"> <%= f.number_field :years %></div>
        </div>

        <div class="control-group">
          <label class="control-label">Describe Yourself </label>
          <div class="controls"> <%= f.text_area :company_desc %> </div>
        </div>


        <div class="control-group">
          <label class="control-label">Company Website </label>
          <div class="controls"> <%= f.text_field :company_url %> </div>
        </div>


       </fieldset>
        


        <div class="panel-header-gray">
          <h3> Shown only to confirmed tenants</h3>
          <p> To protect your privacy, we hide your address, phone number, and contact information from people that have not confirmed a reservation with you
          </p>
        </div>

        <fieldset class="padtop">
          <div class="control-group">
             <label class="control-label">Your Name </label>
             <div class="controls"> <%= f.text_field :contact_name %> </div>
          </div>


          <div class="control-group">
            <label class="control-label">Location Address1 </label>
            <div class="controls"> <%= f.text_field :loc_addr1 %> </div>
          </div>

          <div class="control-group">
            <label class="control-label">Location Address2 </label>
            <div class="controls"> <%= f.text_field :loc_addr2 %> </div>
          </div>

          <div class="control-group">
            <label class="control-label">City</label>
            <div class="controls"> <%= f.text_field :loc_city %> </div>
          </div>

          <div class="control-group">
            <label class="control-label">State</label>
            <div class="controls"> <%= f.text_field :loc_state %> </div>
          </div>

          <div class="control-group">
            <label class="control-label">Email (Required) </label>
            <div class="controls"> <%= f.text_field :contact_email %> </div>
          </div>

           <div class="control-group">
            <label class="control-label">Phone Number </label>
            <div class="controls"> <%= f.text_field :contact_phone %> </div>
           </div>

      </fieldset>

      <div class="panel-header-gray">
        <div class="row">
            <div class="span12 jumbotron">
                <%= f.submit "Add Your Listing", :class => "btn btn-large btn-success" %>
            </div>
          </div>
      </div>
        
  <% end %>


</div>